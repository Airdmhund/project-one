pipeline {
    agent any
    environment {

    }
    stages {
        stage ("Build") {

            steps {
                echo 'Auto build application'
                echo "Building vesion ${NEW_VERSION}"
                echo 'this is working on new branch'

            }
            
        }

        stage ("Test") {
            steps {
                echo 'testing the applicaton'

            }
            
        } 

	    stage ("Building and Publishing Docker Image") {
		    steps {
			    echo 'About to build Docker Image'
		}
        }


        stage ("Deploy to hub") {

            steps {
                echo 'deploying the application to DockerHub'

                }

            }
            
        }
    }

    post {
        always {
            echo 'I can see youre working'
        }
    }
}
